<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TORERO ESPORT"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:padding="10dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team E-Sport berasal dari indonesia yang memiliki 2 divisi yaitu Divisi FreeFire dan Divisi PUBG Mobile"
        android:textAlignment="center"
        android:padding="20dp">

    </TextView>

    <Button
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event">

    </Button>
    <Button
        android:id="@+id/merch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merchandise">

    </Button>
    <Button
        android:id="@+id/member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member">

    </Button>
    <Button
        android:id="@+id/oprek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Register Member"></Button>

</LinearLayout>
</ScrollView>